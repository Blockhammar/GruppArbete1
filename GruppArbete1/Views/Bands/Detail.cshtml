@using GruppArbete1.Models
@model Band

<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css">
    <title>Products</title>
</head>
<body>
    @if (Model.Id == 1)
    {
        <img src="~/images/1.jpg" class="img" alt="My image"/>

    } else if(Model.Id == 2)
    {
        <img src="~/images/2.jpg" class="img" alt="My image" />
    } else
    {
        <img src="~/images/3.jpg" class="img" alt="My image" />

    }

    <h1>@Model.Name</h1>

    <h4>Description</h4>
    <p>@Model.Description</p>
    

</body>
</html>
